{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Configure build (Debug)",
			"command": [
				"rm -rf build && mkdir build && cd build;",
				"CXX=g++-10 conan install .. --build missing -s build_type=Debug;",
				"CXX=g++-10 cmake .. -DCMAKE_BUILD_TYPE=Debug ",
				"-DCMAKE_EXPORT_COMPILE_COMMANDS=ON -DTANGLE_COVERALLS=ON -DTANGLE_COVERALLS_UPLOAD=OFF -G Ninja"
			],
			"args": [],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [],
			"group": "none"
		},
		{
			"type": "shell",
			"label": "Configure build (Release)",
			"command": [
				"rm -rf build && mkdir build && cd build;",
				"CXX=g++-10 conan install .. --build missing -s build_type=Release;",
				"CXX=g++-10 cmake .. -DCMAKE_BUILD_TYPE=Release ",
				"-DCMAKE_EXPORT_COMPILE_COMMANDS=ON -DTANGLE_COVERALLS=ON -DTANGLE_COVERALLS_UPLOAD=OFF -G Ninja"
			],
			"args": [],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [],
			"group": "none"
		},
		{
			"type": "shell",
			"label": "Build (Ninja)",
			"command": "ninja",
			"args": [],
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		},
		{
			"type": "shell",
			"label": "Coverage tests",
			"command": "ninja coveralls",
			"args": [],
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
			"dependsOn": [
				"Build (Ninja)"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			}
		},
		{
			"type": "shell",
			"label": "Import cov data",
			"command": "cov",
			"args": [
				"import",
				"--in",
				"coveralls.json",
				"--amend"
			],
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
			"dependsOn": [
				"Coverage tests"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		}
	]
}